service echo-bis
{
        socket_type     = stream
        wait            = no
        user            = nobody
        id              = echo-bis
        type            = INTERNAL
        redirect     = 172.0.0.1 7
        bind         = 0.0.0.0
        port         = 2007
        log_on_success  += HOST DURATION
        log_on_failure  += HOST
        disable                 = no
}
